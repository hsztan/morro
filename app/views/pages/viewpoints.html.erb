<div class="container mx-auto p-4">
  <h2 class="text-2xl font-bold mb-4">Miradores</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% @viewpoints.each do |viewpoint| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <%= image_tag viewpoint[:image_url], class: 'w-full h-48 object-cover', alt: viewpoint[:name] %>
        <div class="p-4">
          <h3 class="font-bold text-xl mb-2"><%= viewpoint[:name] %></h3>
          <p><%= viewpoint[:description] %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>